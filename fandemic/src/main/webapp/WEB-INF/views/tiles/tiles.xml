<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN" "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">

<tiles-definitions>

	<!-- base tiles layout add -->
	<definition name="star/*" template="/WEB-INF/views/layout/star.jsp">
		<put-attribute name="body"
			value="/WEB-INF/views/star/{1}.jsp" />
	</definition>
		<definition name="mypage/*" template="/WEB-INF/views/layout/mypagedecorator.jsp">
		<put-attribute name="body"
			value="/WEB-INF/views/mypage/{1}.jsp" />
	</definition>

	<definition name="mgt/*" template="/WEB-INF/views/layout/management.jsp">
		<put-attribute name="body"
			value="/WEB-INF/views/management/{1}.jsp" />
	</definition>
	
	<definition name="admin/*" template="/WEB-INF/views/layout/management.jsp">
		<put-attribute name="body"
			value="/WEB-INF/views/admin/{1}.jsp" />
	</definition>
	
	
	<definition name="*/*" template="/WEB-INF/views/layout/base.jsp">
		<put-attribute name="body"
			value="/WEB-INF/views/{1}/{2}.jsp" />
	</definition>
	<definition name="*" template="/WEB-INF/views/layout/base.jsp">
		<put-attribute name="body"
			value="/WEB-INF/views/{1}.jsp" />
	</definition>
	
</tiles-definitions>