<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.yedam.fandemic.impl.CompanyMapper">
<!-- 공지사항 목록 조회 -->
	<select id="getCompanyName" parameterType="Company" resultType="Company">
		SELECT 
			com_name, com_pic
		FROM 
			company
	</select>
	
	<select id="getCompanyInfo" parameterType="Company" resultType="Company">
		SELECT 
			* 
		FROM 
			company
		WHERE
			com_id = #{com_id}
	</select>
</mapper>
