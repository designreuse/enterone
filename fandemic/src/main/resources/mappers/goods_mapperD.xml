<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.yedam.fandemic.impl.GoodsMapperD">
<!-- mybatis사용 -->
<!-- 굿즈 등록 할때 소속사 연예인 목록 조회 -->
	<select id="getCompanyStar" parameterType="Goods" resultType="Star">
		SELECT ST_ID, ST_NAME
		FROM STAR
		WHERE COM_ID=#{com_id}
	</select>
<!-- 굿즈 카테고리 받아오기 -->
	<select id="getCategory" resultType="GoodsCategory">
		SELECT GC_NAME
		FROM GOODSCATEGORY
	</select>	
<!-- 굿즈 등록 -->
	<insert id="insertGoods" parameterType="Goods">
		INSERT INTO GOODS ( go_no,
							go_name,
							go_price,
							go_type,
							go_content,
							com_id,
							st_id,
							go_time,
							go_stock,
							go_limited,
							go_pic,
							go_detail,
							go_untsdate,
							go_untedate,
							go_unttime)
		VALUES(
	 	               			go_seq.NEXTVAL,
	 	               			#{go_name},
	 	               			#{go_price},
	 	               			#{go_type},
	 	               			#{go_content},
	 	               			#{com_id},
	 	               			#{st_id},
	 	               			SYSDATE,
	 	               			#{go_stock},
	 	               			#{go_limited},
	 	               			#{go_pic},
	 	               			#{go_detail},
	 	               			#{go_untsdate},
	 	               			#{go_untedate},
	 	               			#{go_unttime})
	</insert>
<!-- 굿즈목록조회 -->
	<select id="getGoodsList" parameterType="Goods" resultType="Goods">
		SELECT *
		FROM GOODS
		WHERE COM_ID=#{com_id}
	</select>
	
<!-- 소속사 스타회원목록 출력 -->	
	<select id="getStarMemberList" parameterType="Star" resultType="Star">
		SELECT * 
		FROM STAR
		WHERE COM_ID=#{com_id}
	</select>
<!-- 소속사 스타회원가입 ID중복체크-->
	<select id="getStarIdCheck" parameterType="Star" resultType="int">
		SELECT COUNT(*)
		FROM STAR
		WHERE ST_ID=#{st_id}
	</select>
<!-- 소속사 스타회원id에맞는 상세정보-->
	<select id="getStarDetail" parameterType="Star" resultType="Star">
		SELECT *
		FROM STAR
		WHERE ST_ID=#{st_id}
	</select>	
	
<!--  스타회원등록    -->
	<insert id="InsertStar" parameterType="Star">
		
		INSERT INTO STAR (	    st_id, 
								st_pw, 
								st_name,
								com_id,
								st_icon,
								st_pic,
								st_banner,
								st_introduce
								)
	 	                VALUES(
	 	               			#{st_id},
	 	               			#{st_pw},
	 	               			#{st_name},
	 	               			#{com_id},
	 	               			#{st_icon},
	 	               			#{st_pic},
	 	               			#{st_banner},
	 	               			#{st_introduce})
	</insert>	
	
<!-- 스타회원정보수정 -->
	<update id="updateStarMember" parameterType="Star">
		UPDATE STAR
		<set>
			ST_PW=#{st_pw}
			<if test="st_icon !=null">,st_icon=#{st_icon}</if>
			<if test="st_pic !=null">,st_pic=#{st_pic}</if>
			<if test="st_banner !=null">,st_banner=#{st_banner}</if>
			,ST_INTRODUCE=#{st_introduce}
		</set>
		WHERE ST_ID= #{st_id}
	</update>
<!-- 스타회원정보 삭제 -->
	<delete id="deleteStarMember" parameterType="Star">
		DELETE FROM STAR
		WHERE ST_ID IN
		<foreach collection="st_ids" item="id"
				open="(" close=")" separator=","> <!-- collection이 필드명 -->
			#{id}
		</foreach>
	</delete>
</mapper>
